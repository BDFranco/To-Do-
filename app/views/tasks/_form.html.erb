<%= form_with(model: task, local: true, class: "w-100") do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label fw-bold" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Update Task", class: "btn btn-primary rounded-pill" %>
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-outline-secondary rounded-pill" %>
  </div>
<% end %>
