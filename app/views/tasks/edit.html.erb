<div class="container d-flex flex-column align-items-center vh-100 justify-content-center">
  <h1 class="mb-4 fw-bold text-primary">Edit Task</h1>

  <div class="card shadow p-4 rounded-4 w-50">
    <%= form_with(model: @task, local: true, class: "w-100") do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label fw-bold" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit "Confirm Edit", class: "btn btn-primary px-4 rounded-pill" %>
        <%= link_to "Back to tasks", tasks_path, class: "btn btn-outline-secondary px-4 rounded-pill" %>
      </div>
    <% end %>
  </div>
</div>
