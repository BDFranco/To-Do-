<div id="<%= dom_id task %>">
  <p>
    <%= check_box_tag "task-#{task.id}", task.id, task.completed, data: { remote: true, url: task_path(task), method: :patch } %>
    <strong><%= task.title %></strong>
  </p>

  <%= button_to "Delete", task_path(task), method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
</div>
